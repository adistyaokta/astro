---
const { type } = Astro.props;

type TypeColors = {
  [key: string]: string;
};

const typeColors: TypeColors = {
  normal: 'bg-gray-400',
  fighting: 'bg-red-500',
  flying: 'bg-sky-300',
  poison: 'bg-purple-600',
  ground: 'bg-yellow-700',
  rock: 'bg-yellow-800',
  bug: 'bg-green-500',
  ghost: 'bg-indigo-700',
  steel: 'bg-gray-300',
  fire: 'bg-orange-500',
  water: 'bg-blue-500',
  grass: 'bg-green-400',
  electric: 'bg-yellow-300',
  psychic: 'bg-purple-500',
  ice: 'bg-blue-200',
  dragon: 'bg-blue-700',
  dark: 'bg-gray-800',
  fairy: 'bg-pink-300',
  unknown: 'bg-gray-400',
  shadow: 'bg-black',
};
---

<div
  class={`w-20 h-5 p-3 text-center flex items-center justify-center 
  ${typeColors[type.name]} rounded-md font-semibold
  `}
>
  {type.name}
</div>
